FROM python:3.13-slim

# Install only essential system dependencies for molecule testing
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        curl \
        gnupg \
        lsb-release \
        sudo \
        wget \
        rsync \
    && curl -fsSL https://download.docker.com/linux/debian/gpg | gpg --dearmor -o /usr/share/keyrings/docker-archive-keyring.gpg \
    && echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/docker-archive-keyring.gpg] https://download.docker.com/linux/debian $(lsb_release -cs) stable" > /etc/apt/sources.list.d/docker.list \
    && wget -qO - https://www.mongodb.org/static/pgp/server-6.0.asc | apt-key add - \
    && echo "deb [ arch=amd64,arm64 ] https://repo.mongodb.org/apt/debian bullseye/mongodb-org/6.0 main" | tee /etc/apt/sources.list.d/mongodb-org-6.0.list \
    && apt-get update \
    && apt-get install -y --no-install-recommends \
        docker-ce-cli \
        mongodb-mongosh \
    && pip install --no-cache-dir \
        ansible \
        molecule \
        molecule-docker \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* \
    && mkdir -p ~/.docker

# Fix permission issues for Ansible
RUN mkdir -p /tmp/.ansible/tmp && \
    chmod 755 /tmp/.ansible/tmp && \
    mkdir -p /root/.ansible && \
    chmod 755 /root/.ansible

# Set environment variables for Ansible
ENV HOME=/tmp
ENV ANSIBLE_LOCAL_TMP=/tmp/.ansible/tmp
ENV ANSIBLE_REMOTE_TMP=/tmp/.ansible/tmp
ENV PYTHONUNBUFFERED=1

# Set working directory
WORKDIR /workspace

# Default command
CMD ["molecule"] 