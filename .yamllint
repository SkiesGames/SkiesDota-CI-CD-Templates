extends: default

rules:
  # 80 chars should be enough, but don't fail if a line is longer
  line-length: disable
  
  # Allow document start
  document-start: disable
  
  # Allow trailing spaces in some cases
  trailing-spaces: enable
  
  # Allow comments
  comments-indentation: disable
  
  # Allow indentation with spaces
  indentation:
    spaces: 2
    indent-sequences: true
    
  # Allow truthy values
  truthy:
    check-keys: false
    
  # Allow brackets in comments
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 1
    
  # Required by ansible-lint
  comments:
    min-spaces-from-content: 1
    
  braces:
    max-spaces-inside: 1
    
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true 