# Use Python 3.13 slim image as base
FROM python:3.13-slim

# Set environment variables for better security and performance
ENV DEBIAN_FRONTEND=noninteractive \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    ANSIBLE_FORCE_COLOR=1 \
    ANSIBLE_GALAXY_DISABLE_GPG_VERIFY=1

# Install system dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        # SSH client for testing
        openssh-client \
        # Basic utilities
        curl \
        && rm -rf /var/lib/apt/lists/*

# Install Python Dependencies
RUN pip install --no-cache-dir ansible

# Copy and install Ansible collections and roles
COPY ansible/requirements.yml /tmp/requirements.yml
RUN ansible-galaxy collection install -r /tmp/requirements.yml && \
    ansible-galaxy role install -r /tmp/requirements.yml && \
    rm /tmp/requirements.yml

# Copy Ansible configuration
COPY ansible/ansible.cfg /etc/ansible/ansible.cfg

# Set Working Directory
WORKDIR /workspace